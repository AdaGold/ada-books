<!DOCTYPE html>
<html>
  <head>
    <title>AdaBooks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <h1>Welcome to Ada Books</h1>
  </header>
  <body>
  <header>
    <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "New Book", new_book_path %></li>
      <li><%= link_to "New Author", new_author_path  %></li>
      <li><%= link_to "Authors", authors_path %></li>
      <% if session[:user_id].nil %>
        <li><%= link_to "Log In with Github", github_login_path %></li>
      <% else %>
        <li><%= link_to "Log Out", logout_path, method: :post %></li>
        <li><%= link_to "Current User", current_user_path %></li>
      <% end %>
    </ul>
    </nav>
  </header>

    <section class="flash-msg__section">
      <% flash.each do |name, message| %>
        <strong class="<%= name %>">
          <%= message %>
        </strong>
      <% end %>
    </section>

    <%= yield %>
  </body>
  <footer>
    <p>Copyright Ada C13 2020</p>
  </footer>
</html>
