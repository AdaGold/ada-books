<%#index.html.erb%>

<h1>Book List</h1>
<ul>
  <% @books.each do |book|  %>
    <li>
      <%= link_to book.title, book_path(book) %>
      By: <%= book.author.name %> <%= link_to "Edit Book", edit_book_path(book.id) %>
      <%= link_to "Delete", book_path(book.id), method: :delete, class: 'book---delete-link' %>
    </li>
  <% end %>
</ul>
<%= link_to "Add Book", new_book_path %>